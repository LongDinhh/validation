{
  "name": "longdinhh/validation",
  "type": "library",
  "description": "A re-write of rakit/validation providing Laravel like validation as a standalone library",
  "keywords": [
    "php",
    "validation",
    "symfony"
  ],
  "license": "MIT",
  "authors": [
    {
      "email": "emsifa@gmail.com",
      "name": "Muhammad Syifa"
    }
  ],
  "autoload": {
    "psr-4": {
      "Coccoc\\Validation\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Coccoc\\Validation\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=7.2",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "squizlabs/php_codesniffer": "^3",
    "php-coveralls/php-coveralls": "^2.2"
  },
  "scripts": {
    "test": [
        "phpunit",
        "phpcs"
    ]
  },
  "config": {
    "preferred-install": "dist"
  }
}
